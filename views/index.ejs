  <!-- jQuery Script to handle dropdown selection and API call -->
  <script>
    let baseCurrency = '';
    let targetCurrency = '';

    // Handle base currency selection
    $('.base-currency').on('click', function() {
      baseCurrency = $(this).data('value');
      $('#baseCurrencyButton').text(`Base Currency: ${baseCurrency}`);
      updateSelectedCurrencies();
    });

    // Handle target currency selection
    $('.target-currency').on('click', function() {
      targetCurrency = $(this).data('value');
      $('#targetCurrencyButton').text(`Target Currency: ${targetCurrency}`);
      updateSelectedCurrencies();
    });

    // Update displayed selected currencies and make API request
    function updateSelectedCurrencies() {
      if (baseCurrency && targetCurrency) {
        $('#selectedCurrencies').text(`Selected Currencies: ${baseCurrency} to ${targetCurrency}`);

        // Fetch the exchange rate from the server
        $.get('/getExchangeRate', { baseCurrency, targetCurrency }, function(data) {
          $('#exchangeRateResult').text(`Exchange Rate: 1 ${data.base} = ${data.rate} ${data.target}`);
        }).fail(function() {
          $('#exchangeRateResult').text('Error fetching exchange rate.');
        });
      }
    }
  </script>
